{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-4 col-md-6">
        <h1 class="text-center">Inscription patient</h1>
        {{ form_start(register_form_patient) }}
        <div class="row">
            <div class="col-md-4">{{ form_row(register_form_patient.sex) }}</div>
            <div class="col-md-4">{{ form_row(register_form_patient.first_name) }}</div>
            <div class="col-md-4">{{ form_row(register_form_patient.last_name) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(register_form_patient.email) }}</div>
            <div class="col-md-6">{{ form_row(register_form_patient.phone_number) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(register_form_patient.date_of_birth) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(register_form_patient.password.first) }}</div>
            <div class="col-md-6">{{ form_row(register_form_patient.password.second) }}</div>
        </div>
        {{ form_rest(register_form_patient) }}
        <button class="btn btn-primary">S'inscrire</button>
        {{ form_end(register_form_patient) }}
    </div>
{% endblock %}
