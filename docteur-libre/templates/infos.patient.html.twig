{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4 col-md-6">
        {% block form_title %} {% endblock %}
        {{ form_start(register_form_patient) }}
        <div class="row">
            <div class="col-md-4">{{ form_row(register_form_patient.user.sex) }}</div>
            <div class="col-md-4">{{ form_row(register_form_patient.user.first_name) }}</div>
            <div class="col-md-4">{{ form_row(register_form_patient.user.last_name) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(register_form_patient.user.email) }}</div>
            <div class="col-md-6">{{ form_row(register_form_patient.user.phone_number) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(register_form_patient.patient.date_of_birth) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(register_form_patient.user.password.first) }}</div>
            <div class="col-md-6">{{ form_row(register_form_patient.user.password.second) }}</div>
        </div>
        {{ form_rest(register_form_patient) }}
        <button class="btn btn-primary">
            {% block button_name %} {% endblock %}
        </button>
        {{ form_end(register_form_patient) }}
    </div>
{% endblock %}
