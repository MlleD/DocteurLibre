{% extends 'base.html.twig' %}

{% block title %}
    Docteur libre - Changement de mot de passe
{% endblock %}

{% block body %}
    <div class="container mt-4 col-md-6">
        <h1 class="text-center">Changement de mot de passe</h1>
        {{ form_start(edit_password) }}
        {% if error %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
        {% endif %}
        <div class="row">
            <div class="col-md-6">{{ form_row(edit_password.old_password) }}</div>
            <div class="col-md-6">{{ form_row(edit_password.new_password) }}</div>
        </div>
        {{ form_rest(edit_password) }}
        <button class="btn btn-primary">Changer de mot de passe</button>
        {{ form_end(edit_password) }}
    </div>
{% endblock %}
