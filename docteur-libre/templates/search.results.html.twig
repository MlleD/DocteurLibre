{% extends 'base.html.twig' %}

{% block title %}
    Docteur libre - Résultats de recherche
{% endblock %}

{% block body %}
    <div class="container mt-4 col-md-4">
        <h1 class="text-center">Résultats de recherche</h1>
        {% if search_results %}
        <div class="row">Voici les docteurs dont la profession contient "{{search}}"</div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Profession</th>
                    <th scope="col">Profil</th>
                </tr>
            </thead>
            <tbody>
                {% for result in search_results %}
                    <tr>
                        <td>{{result.first_name}}</td>
                        <td>{{result.last_name}}</td>
                        <td>{{result.profession}}</td>
                        <td><a href="{{ path('profile', {id: result.id}) }}">Profil</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <div class="row">Pas de docteur trouvé dont la profession contient "{{search}}".</div>
        {% endif %}
    </div>
{% endblock %}
