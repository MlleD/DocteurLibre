{% extends 'base.html.twig' %}

{% block title %}
    Docteur libre - Prochains rendez-vous
{% endblock %}

{% block body %}
    <h1 class="text-center">Mes prochains rendez-vous</h1>
    <div class="container mt-4 col-md-9">
        {% if appointments %}
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Date du rendez-vous</th>
                    <th scope="col">Raison</th>
                    <th scope="col">Infos</th>
                    </tr>
                </thead>
                <tbody>
                    {% for appointment in appointments %}
                        <tr>
                            <td>{{appointment.first_name}}</td>
                            <td>{{appointment.last_name}}</td>
                            <td>{{appointment.appointment_time | date("d/m/Y H:i")}}</td>
                            <td>{{appointment.appointment_reason}}</td>
                            <td><a href="{{ path('profile', {id: appointment.id}) }}">Profil</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="row">Vous n'avez pas de rendez-vous à l'avenir.</div>
        {% endif %}
    </div>
{% endblock %}